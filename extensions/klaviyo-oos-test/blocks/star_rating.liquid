{%- comment -%}
  Back in Stock Product-Level Signup Form
{%- endcomment -%}
{% assign all_variants_out_of_stock = true %}
{% for variant in block.settings.product.variants %}
  {% if variant.available %}
    {% assign all_variants_out_of_stock = false %}
  {% endif %}
{% endfor %}

{% if all_variants_out_of_stock %}
  <form id="back-in-stock-signup" class="form-horizontal clearfix">
      <div class="col-md-8">
        <input type="email" name="email" class="form-control input-lg klaviyo-oos-input" placeholder="Enter your email" required>
        <input type="hidden" name="product_id" value="{{ block.settings.product.id }}">
      </div>
      <div class="col-md-4">
        <button class="button" type="submit">Notify Me When Available</button>
      </div>

    
    
  </form>
  <script>
    document.getElementById('back-in-stock-signup').addEventListener('submit', async function(e) {
      e.preventDefault();
      const email = e.target.email.value;
      const productId = e.target.product_id.value;
      // TODO: Replace with your backend endpoint or Klaviyo API integration
      await fetch('https://yhzyjwu742.execute-api.us-east-1.amazonaws.com/default/klaviyo_bis_product', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        mode: 'cors',
        credentials: 'include',
        body: JSON.stringify({ 
          email, 
          product_id: productId,
          action: "signup",
          product_url: '{{ shop.url }}{{ block.settings.product.url }}',
        })
      });
      
      alert('You will be notified when any variant is back in stock!');
    });
  </script>

